{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "applicationTypeName": {
      "type": "string",
      "maxLength": 64
    },
    "applicationTypeVersion": {
      "type": "string",
      "maxLength": 64
    },
    "applicationName": {
      "type": "string",
      "maxLength": 64
    },
    "useManagedClusters": {
      "type": "bool",
      "defaultValue": true
    },
    "nestedParameterObject": {
      "type": "object"
    }
  },
  "variables": {
    "sfrpFullAppTypeDeploymentName": "[take(concat(parameters('applicationTypeName'), '-', parameters('applicationTypeVersion'), '-SFRP-Type'), 64)]"
  },
  "resources": [
    {
      "condition": "[not(parameters('useManagedClusters'))]",
      "apiVersion": "2017-05-10",
      "name": "[concat(parameters('applicationName'), '-SFRP-App')]",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[variables('sfrpFullAppTypeDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://infraarmtemplates.blob.core.windows.net/arm-templates/Arm-Templates/PackageDeployment/ServiceFabric/Application-WIthMsi/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "clusterName": {
            "value": "[parameters('nestedParameterObject').clusterName]"
          },
          "location": {
            "value": "[parameters('nestedParameterObject').location]"
          },
          "applicationName": {
            "value": "[parameters('nestedParameterObject').applicationName]"
          },
          "applicationTypeName": {
            "value": "[parameters('nestedParameterObject').applicationTypeName]"
          },
          "applicationTypeVersion": {
            "value": "[parameters('nestedParameterObject').applicationTypeVersion]"
          },
          "applicationParameters": {
            "value": "[parameters('nestedParameterObject').applicationParameters]"
          },
          "userAssignedIdentityResourceId": {
            "value": "[parameters('nestedParameterObject').userAssignedIdentityResourceId]"
          }
        }
      }
    }

  ],
  "outputs": {}
}